<!DOCTYPE html>
<html>
<head>
  <title>Simple Blog</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <h1>My Cool Blog</h1>
    <nav><a href="/new">âž• Create New Post</a></nav>
  </header>

  <div class="container">
    <% posts.forEach(post => { %>
      <div class="post">
        <h2><a href="/post/<%= post.id %>"><%= post.title %></a></h2>
        <p><%= post.content.substring(0, 150) %>...</p>
      </div>
    <% }) %>
  </div>
</body>
</html>
